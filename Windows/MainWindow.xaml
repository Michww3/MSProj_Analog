<Window x:Class="MSProj_Analog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resource Planning" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <DataGrid ItemsSource="{Binding FullTasks}" AutoGenerateColumns="False" Margin="10,10,10,200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Task Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Assigned Resource Id" Binding="{Binding ResourceId}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Add resource" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,1522,10" Width="160" Height="100" Click="OnAddResourceClick"
        Background="#9a8e87"
        Foreground="White"
        FontFamily="Arial"
        FontSize="20"/>
        
        <Button Content="Add task" HorizontalAlignment="Left"  Margin="10,0,0,10" VerticalAlignment="Bottom" Height="100" Width="160" Click="OnAddTaskClick"
        Background="#9a8e87"
        Foreground="White"
        FontFamily="Arial"
        FontSize="20"/>

        <Button Content="Create charts" HorizontalAlignment="Left" Margin="960,0,0,10" VerticalAlignment="Bottom" Height="100" Width="160" Click="OnCreateChartsClick"
        Background="#9a8e87"
        Foreground="White"
        FontFamily="Arial"
        FontSize="20"/>
        
        <Button x:Name="AddResourceToTaskButton" Content="Add resource to task"  VerticalAlignment="Bottom" Margin="478,0,1224,10"  Height="100" Click="OnAddResourceToTaskClick" 
        Background="#9a8e87"
        Foreground="White"
        FontFamily="Arial"
        FontSize="20"/>


    </Grid>
</Window>
    
