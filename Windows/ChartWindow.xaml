<Window x:Class="MSProj_Analog.Windows.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSProj_Analog.Windows"
        mc:Ignorable="d"
        Title="ChartWindow" Height="1080" Width="1920" WindowState="Maximized"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">

    <Grid>
        <lvc:CartesianChart x:Name="GanttChart">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Дата" LabelFormatter="{Binding DateFormatter}" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Задачи" Labels="{Binding TaskLabels}" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Window>
